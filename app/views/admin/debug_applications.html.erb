<pre>
<% @app.each do |app|
  print = false
  app.choices.each do |choice|
    if choice.statement.blank? && choice.rank < 3
      print = true
    end
  end
  if print %>
    <%= app.user.name %>
    <%= app.id %>
    <% app.choices.order('rank').each do |choice| %>
      <%= choice.id %>  <%= choice.rank %>  <%= choice.organization.name %>  <%= choice.statement %>
      <% end %>
    <% end %>
  <% end %>
</pre>