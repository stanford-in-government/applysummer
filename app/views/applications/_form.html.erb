<%= simple_form_for @application do |f| %>
  <%= f.input :category, collection: Application::CATEGORIES, disabled: true %>
  <%= error_span(@application[:category]) %>
  <%= f.input :status, collection: Application::STATUSES %>
  <%= error_span(@application[:status]) %>
  <%= f.input :rec_code, disabled: true %>
  <%= error_span(@application[:rec_code]) %>
  <%= f.input :user, disabled: true %>
  <%= error_span(@application[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                applications_path, :class => 'btn btn-default' %>
<% end %>
