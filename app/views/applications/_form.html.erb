<%= simple_form_for @application, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :category %>
  <%= error_span(@application[:category]) %>
  <%= f.input :status %>
  <%= error_span(@application[:status]) %>
  <%= f.input :rec_code %>
  <%= error_span(@application[:rec_code]) %>
  <%= f.input :user_id %>
  <%= error_span(@application[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                applications_path, :class => 'btn btn-default' %>
<% end %>
