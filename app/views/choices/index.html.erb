<h1>Listing choices</h1>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Statement</th>
      <th>Organization</th>
      <th>Application</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @choices.each do |choice| %>
      <tr>
        <td><%= choice.rank %></td>
        <td><%= choice.statement %></td>
        <td><%= choice.organization %></td>
        <td><%= choice.application %></td>
        <td><%= link_to 'Show', choice %></td>
        <td><%= link_to 'Edit', edit_choice_path(choice) %></td>
        <td><%= link_to 'Destroy', choice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Choice', new_choice_path %>
