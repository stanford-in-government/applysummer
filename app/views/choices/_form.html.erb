<%= simple_form_for @choice, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :rank %>
  <%= error_span(@choice[:rank]) %>
  <%= f.input :statement %>
  <%= error_span(@choice[:statement]) %>
  <%= f.input :budget %>
  <%= error_span(@choice[:budget]) %>
  <%= f.input :organization_id %>
  <%= error_span(@choice[:organization_id]) %>
  <%= f.input :application_id %>
  <%= error_span(@choice[:application_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                choices_path, :class => 'btn btn-default' %>
<% end %>
