<%= simple_form_for @organization do |f| %>
  <%= f.input :name %>
  <%= error_span(@organization[:name]) %>
  <%= f.input :url %>
  <%= error_span(@organization[:url]) %>
  <%= f.input :category, collection: Organization::CATEGORIES %>
  <%= error_span(@organization[:category]) %>
  <%= f.input :logo %>
  <%= error_span(@organization[:logo]) %>
  <%= f.input :description %>
  <%= error_span(@organization[:description]) %>
  <%= f.input :city %>
  <%= error_span(@organization[:city]) %>
  <%= f.input :state %>
  <%= error_span(@organization[:state]) %>
  <%= f.input :active %>
  <%= error_span(@organization[:active]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                organizations_path, :class => 'btn btn-default' %>
<% end %>
