<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:sunetid) %></th>
      <th><%= model_class.human_attribute_name(:suid) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:middle_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:local_street) %></th>
      <th><%= model_class.human_attribute_name(:local_city) %></th>
      <th><%= model_class.human_attribute_name(:local_state) %></th>
      <th><%= model_class.human_attribute_name(:local_postal) %></th>
      <th><%= model_class.human_attribute_name(:perm_street) %></th>
      <th><%= model_class.human_attribute_name(:perm_city) %></th>
      <th><%= model_class.human_attribute_name(:perm_state) %></th>
      <th><%= model_class.human_attribute_name(:perm_postal) %></th>
      <th><%= model_class.human_attribute_name(:majors) %></th>
      <th><%= model_class.human_attribute_name(:minors) %></th>
      <th><%= model_class.human_attribute_name(:class_year) %></th>
      <th><%= model_class.human_attribute_name(:overall_gpa) %></th>
      <th><%= model_class.human_attribute_name(:major_gpa) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to profile.id, profile_path(profile) %></td>
        <td><%= profile.user_id %></td>
        <td><%= profile.sunetid %></td>
        <td><%= profile.suid %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.middle_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.local_street %></td>
        <td><%= profile.local_city %></td>
        <td><%= profile.local_state %></td>
        <td><%= profile.local_postal %></td>
        <td><%= profile.perm_street %></td>
        <td><%= profile.perm_city %></td>
        <td><%= profile.perm_state %></td>
        <td><%= profile.perm_postal %></td>
        <td><%= profile.majors %></td>
        <td><%= profile.minors %></td>
        <td><%= profile.class_year %></td>
        <td><%= profile.overall_gpa %></td>
        <td><%= profile.major_gpa %></td>
        <td><%=l profile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_profile_path(profile), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      profile_path(profile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_profile_path,
            :class => 'btn btn-primary' %>
