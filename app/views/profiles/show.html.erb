<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @profile.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
  <dd><%= @profile.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:middle_name) %>:</strong></dt>
  <dd><%= @profile.middle_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
  <dd><%= @profile.last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_street) %>:</strong></dt>
  <dd><%= @profile.local_street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_city) %>:</strong></dt>
  <dd><%= @profile.local_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_state) %>:</strong></dt>
  <dd><%= @profile.local_state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local_postal) %>:</strong></dt>
  <dd><%= @profile.local_postal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:perm_street) %>:</strong></dt>
  <dd><%= @profile.perm_street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:perm_city) %>:</strong></dt>
  <dd><%= @profile.perm_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:perm_state) %>:</strong></dt>
  <dd><%= @profile.perm_state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:perm_postal) %>:</strong></dt>
  <dd><%= @profile.perm_postal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:majors) %>:</strong></dt>
  <dd><%= @profile.majors %></dd>
  <dt><strong><%= model_class.human_attribute_name(:minors) %>:</strong></dt>
  <dd><%= @profile.minors %></dd>
  <dt><strong><%= model_class.human_attribute_name(:class_year) %>:</strong></dt>
  <dd><%= @profile.class_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:overall_gpa) %>:</strong></dt>
  <dd><%= @profile.overall_gpa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:major_gpa) %>:</strong></dt>
  <dd><%= @profile.major_gpa %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
