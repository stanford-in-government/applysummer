<%- model_class = Internship -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:application_id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:supervisor_name) %></th>
      <th><%= model_class.human_attribute_name(:supervisor_title) %></th>
      <th><%= model_class.human_attribute_name(:supervisor_email) %></th>
      <th><%= model_class.human_attribute_name(:supervisor_phone) %></th>
      <th><%= model_class.human_attribute_name(:faculty_name) %></th>
      <th><%= model_class.human_attribute_name(:at_home) %></th>
      <th><%= model_class.human_attribute_name(:financial_aid) %></th>
      <th><%= model_class.human_attribute_name(:unpaid) %></th>
      <th><%= model_class.human_attribute_name(:minimum_length) %></th>
      <th><%= model_class.human_attribute_name(:fulltime) %></th>
      <th><%= model_class.human_attribute_name(:travel_warning) %></th>
      <th><%= model_class.human_attribute_name(:political) %></th>
      <th><%= model_class.human_attribute_name(:social_service) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:related_to) %></th>
      <th><%= model_class.human_attribute_name(:work_scope) %></th>
      <th><%= model_class.human_attribute_name(:relevance) %></th>
      <th><%= model_class.human_attribute_name(:reason) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @internships.each do |internship| %>
      <tr>
        <td><%= link_to internship.id, internship_path(internship) %></td>
        <td><%= internship.application_id %></td>
        <td><%= internship.name %></td>
        <td><%= internship.city %></td>
        <td><%= internship.country %></td>
        <td><%= internship.supervisor_name %></td>
        <td><%= internship.supervisor_title %></td>
        <td><%= internship.supervisor_email %></td>
        <td><%= internship.supervisor_phone %></td>
        <td><%= internship.faculty_name %></td>
        <td><%= internship.at_home %></td>
        <td><%= internship.financial_aid %></td>
        <td><%= internship.unpaid %></td>
        <td><%= internship.minimum_length %></td>
        <td><%= internship.fulltime %></td>
        <td><%= internship.travel_warning %></td>
        <td><%= internship.political %></td>
        <td><%= internship.social_service %></td>
        <td><%= internship.category %></td>
        <td><%= internship.related_to %></td>
        <td><%= internship.work_scope %></td>
        <td><%= internship.relevance %></td>
        <td><%= internship.reason %></td>
        <td><%=l internship.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_internship_path(internship), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      internship_path(internship),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_internship_path,
            :class => 'btn btn-primary' %>
